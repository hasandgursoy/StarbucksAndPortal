@model CoreLayer.DTOs.MernisDto
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <title>Document</title>

</head>

<body>
    <div class="container ">
        <div class="row mt-5 ">
            <div class="col text-center">
                <h1>Starbucks Müşteri Kayıt Formu</h1>
                <h5>Hatalı Bir Bilgi Girmezseniz Kayıt İşlemi Tamamlanıp Ana Sayfaya Yönledileceksiniz.</h5>
                <h5>Hatalı Bilgi Girerseniz Sayfada Herhangi Bir Etkileşim Olmayacakdır. Lütfen Kontrol Ediniz.</h5>
                @using (Html.BeginForm("Index", "Starbucks", FormMethod.Post))
                {
                    <form class="mt-2">

                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">TC Kimlik No</label>
                            @Html.TextBoxFor(x => x.TCKNo,new {@class="form-control"})
                            @Html.ValidationMessageFor(x => x.TCKNo,"",new{@class="text-danger"})
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Doğum Yılı</label>
                            @Html.TextBoxFor(x => x.BirthYear,new {@class="form-control"})
                            @Html.ValidationMessageFor(x => x.BirthYear,"",new{@class="text-danger"})
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Ad</label>
                            @Html.TextBoxFor(x => x.Name,new {@class="form-control"})
                            @Html.ValidationMessageFor(x => x.Name,"",new{@class="text-danger"})
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Soyad</label>
                            @Html.TextBoxFor(x => x.Surname,new {@class="form-control"})
                            @Html.ValidationMessageFor(x => x.Surname,"",new{@class="text-danger"})
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">E-Mail</label>
                            @Html.TextBoxFor(x => x.Email,new {@class="form-control"})
                            @Html.ValidationMessageFor(x => x.Email,"",new{@class="text-danger"})
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Şifre</label>
                            @Html.TextBoxFor(x => x.Password,new {@class="form-control"})
                            @Html.ValidationMessageFor(x => x.Password,"",new{@class="text-danger"})
                        </div>
                        <button type="submit" id="btn1" class="btn btn-primary">Kayıt Et</button>

                    </form>
                }

            </div>
        </div>
    </div>

   
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"></script>
</body>

</html>